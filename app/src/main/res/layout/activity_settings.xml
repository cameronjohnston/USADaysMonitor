<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.caniborrowyourphone.usa.SettingsActivity" >

    <Button
        android:layout_width="144dp"
        android:layout_height="72dp"
        android:layout_below="@+id/loggedInAsTextView"
        android:text="@string/logout"
        android:id="@+id/logoutButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/button_selector"
        android:textColor="@color/white" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/minimize_data_usage"
        android:id="@+id/minimizeDataUsageSwitch"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:checked="false"
        android:layout_below="@+id/logoutButton"
        android:thumb="@color/usaflagrevisedblue" />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/loggedInAsTextView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/usaflagrevisedblue"
        android:gravity="center"
        android:textSize="16sp" />

</RelativeLayout>