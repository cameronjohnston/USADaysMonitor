<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.caniborrowyourphone.usa.CalendarView" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/loggedInAsTextView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/usaflagrevisedblue"
        android:gravity="center"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/calendarLinearLayout"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loggedInAsTextView"
        android:layout_marginTop="8dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_centerHorizontal="true">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/prevMonthButton"
            android:background="@drawable/leftarrow64" />

        <Spinner
            android:id="@+id/selectMonthSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:prompt="@string/months_prompt"
            android:gravity="center" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nextMonthButton"
            android:background="@drawable/rightarrow64" />

    </LinearLayout>

