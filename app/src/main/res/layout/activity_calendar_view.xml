                android:text="@string/Sun"
                android:textSize="20sp"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="4dp"/>
            <Button
                android:layout_height="44dp"
                android:layout_weight="1"
